<?xml version="1.0"?>
<sdf version="1.6">
  <world name="default">
    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>1 1 1 1</diffuse>
      <specular>0.5 0.5 0.5 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>
    <model name="motor_model_demo">
      <pose>0 0 0 0 0 0</pose>
      <link name="base_link">
        <pose>0.0 0.0 0.0 0 0 0</pose>
        <inertial>
          <inertia>
            <ixx>2.501</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>2.501</iyy>
            <iyz>0</iyz>
            <izz>5</izz>
          </inertia>
          <mass>120.0</mass>
        </inertial>
        <visual name="base_visual">
          <pose>0.0 0.0 0.0 0 0 0</pose>
          <geometry>
            <box>
              <size>0.5 0.5 0.01</size>
            </box>
          </geometry>
        </visual>
        <collision name="base_collision">
          <pose>0.0 0.0 0.0 0 0 0</pose>
          <geometry>
            <box>
              <size>0.5 0.5 0.01</size>
            </box>
          </geometry>
        </collision>
      </link>
      <!-- Motor Housing -->
      <link name="motor_housing">
        <pose>0.0 0.0 0.1 0 0 0</pose>
        <inertial>
          <inertia>
            <ixx>0.0001</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.0001</iyy>
            <iyz>0</iyz>
            <izz>0.0001</izz>
          </inertia>
          <mass>0.2</mass>
        </inertial>
        <visual name="motor_visual">
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.05</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.3 0.3 0.3 1</ambient>
            <diffuse>0.7 0.7 0.7 1</diffuse>
          </material>
        </visual>
        <collision name="motor_collision">
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.05</length>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <!-- Propeller -->
      <link name="propeller">
        <pose>0.0 0.0 0.13 0 0 0</pose>
        <inertial>
          <inertia>
            <ixx>0.00001</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.00025</iyy>
            <iyz>0</iyz>
            <izz>0.00025</izz>
          </inertia>
          <mass>0.05</mass>
        </inertial>
        <visual name="prop_visual">
          <geometry>
            <mesh>
              <uri>model://iris_with_standoffs/meshes/iris_prop_ccw.dae</uri>
              <scale>1 1 1</scale>
            </mesh>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.2 0.2 0.2 1</diffuse>
          </material>
        </visual>
        <collision name="prop_collision">
          <geometry>
            <cylinder>
              <radius>0.128</radius>
              <length>0.005</length>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <joint name="world_fixed" type="fixed">
        <parent>world</parent>
        <child>base_link</child>
      </joint>

      <!-- Motor housing to base joint -->
      <joint name="motor_mount" type="fixed">
        <parent>base_link</parent>
        <child>motor_housing</child>
      </joint>

      <!-- Propeller to motor joint -->
      <joint name="joint_0" type="revolute">
        <pose>0 0 0 0 0 0</pose>
        <parent>motor_housing</parent>
        <child>propeller</child>
        <axis>
          <xyz>0 0 1</xyz>
          <dynamics>
            <damping>1.0e-5</damping>
          </dynamics>
          <limit>
            <lower>-1e+16</lower>
            <upper>1e+16</upper>
          </limit>
        </axis>
      </joint>

      <plugin filename="gz-sim-lift-drag-system"
        name="gz::sim::systems::LiftDrag">
        <a0>0.3</a0>
        <alpha_stall>1.4</alpha_stall>
        <cla>4.2500</cla>
        <cda>0.10</cda>
        <cma>0.0</cma>
        <cla_stall>-0.025</cla_stall>
        <cda_stall>0.0</cda_stall>
        <cma_stall>0.0</cma_stall>
        <area>0.002</area>
        <air_density>1.2041</air_density>
        <cp>0.084 0 0</cp>
        <forward>0 1 0</forward>
        <upward>0 0 1</upward>
        <link_name>propeller</link_name>
      </plugin>


      <plugin filename="gz-sim-joint-state-publisher-system"
        name="gz::sim::systems::JointStatePublisher">
      </plugin>

      <plugin filename="MotorPlugin" name="MotorPlugin">

        <control channel="0">
          <joint_name>joint_0</joint_name>
          <voltage_bat>16</voltage_bat>
          <speed_constant>920</speed_constant>
          <resistance>0.115</resistance>
          <no_load_current>0.8</no_load_current>
          <cmd_topic>joint_0_topic</cmd_topic>
          <thermal_resistance>1.40</thermal_resistance>
          <thermal_capacitance>214.28</thermal_capacitance>
          <ambient_temperature>25.0</ambient_temperature>
        </control>
      </plugin>
    </model>
  </world>
</sdf>  